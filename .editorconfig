root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2
quote_type = double

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[*.sh]
end_of_line = lf
insert_final_newline = true

[*.min.js]
insert_final_newline = false
trim_trailing_whitespace = false
